{
  "name": "daytripper",
  "version": "1.0.0",
  "scripts": {
    "dev": "concurrently \"docker-compose up --build\" \"pnpm run client:dev\"",
    "client:dev": "cd client/daytripper && pnpm run dev",
    "api:dev": "docker-compose up --build",
    "setup": "echo 'Installing dependencies...' && cd client/daytripper && pnpm install && echo 'Starting application...' && cd ../.. && pnpm run dev",
    "install:client": "cd client/daytripper && pnpm install",
    "clean": "docker-compose down && docker system prune -f"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
